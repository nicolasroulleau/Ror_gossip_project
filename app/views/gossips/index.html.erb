<h1>Hello Ladies and Gentlemen !</h1> 
<h2>This website is dedicated to THP gossips</h2>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Anonymous author</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gossips.each do |gossip| %>
      <tr>
      	<td><%= gossip.id %></td>
        <td><%= gossip.anonymous_author %></td>
        <td><%= gossip.content %></td>
        <td><%= link_to 'Show', gossip %></td>
        <td><%= link_to 'Edit', edit_gossip_path(gossip) %></td>
        <td><%= link_to 'Delete', gossip, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div><%= link_to"New Gossip",new_gossip_path %></div>



